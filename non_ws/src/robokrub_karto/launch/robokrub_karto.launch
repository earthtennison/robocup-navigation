<launch>
  <param name="/use_sim_time" value="true" />

  <node name="rviz" pkg="rviz" type="rviz" output="screen" args="-d $(find robokrub_karto)/rviz/map.rviz"/>

  <node name="cartographer_node" pkg="cartographer_ros"
      type="cartographer_node" args="
          -configuration_directory $(find robokrub_karto)/config
          -configuration_basename robokrub_karto_2d.lua"
      output="screen">
    <remap from="scan" to="/scan_filtered" />
    <remap from="points2" to="/depth_cam/depth/points" />
  </node>

  <node name="cartographer_occupancy_grid_node" pkg="cartographer_ros"
      type="cartographer_occupancy_grid_node" args="-resolution 0.05" />
</launch>