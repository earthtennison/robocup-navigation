<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="cmd_vel_topic" default="/robot1/cmd_vel" />
  <arg name="odom_topic" default="/robot1/odom" />
  <arg name="move_forward_only" default="false"/>
  <arg name="robot_tf_prefix" default="robot1_tf"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find multi_navigation)/param/costmap_common_params_$(arg model).yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find multi_navigation)/param/costmap_common_params_$(arg model).yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find multi_navigation)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find multi_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find multi_navigation)/param/move_base_params.yaml" command="load" />
    <rosparam file="$(find multi_navigation)/param/dwa_local_planner_params_$(arg model).yaml" command="load" />

    <!-- Set tf prefix -->
    <param name="global_costmap/scan/sensor_frame" value="$(arg robot_tf_prefix)/base_scan"/>
    <param name="global_costmap/scan/topic" value="/robot1/scan"/>
    <param name="global_costmap/obstacle_layer/scan/sensor_frame" value="$(arg robot_tf_prefix)/base_scan"/>
    <param name="global_costmap/obstacle_layer/scan/topic" value="/robot1/scan"/>
    <param name="global_costmap/global_frame" value="map"/>
    <param name="global_costmap/robot_base_frame" value="$(arg robot_tf_prefix)/base_footprint"/>
    <param name="local_costmap/scan/sensor_frame" value="$(arg robot_tf_prefix)/base_scan"/>
    <param name="local_costmap/scan/topic" value="/robot1/scan"/>
    <param name="local_costmap/obstacle_layer/scan/sensor_frame" value="$(arg robot_tf_prefix)/base_scan"/>
    <param name="local_costmap/obstacle_layer/scan/topic" value="/robot1/scan"/>
    <param name="local_costmap/global_frame" value="$(arg robot_tf_prefix)/odom"/>
    <param name="local_costmap/robot_base_frame" value="$(arg robot_tf_prefix)/base_footprint"/>


    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
    <remap from="map" to="/map"/>
  </node>
</launch>
