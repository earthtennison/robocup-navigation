<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <arg name="robot2_odom_frame_id"  default="robot2_tf/odom"/>
  <arg name="robot2_base_frame_id"  default="robot2_tf/base_footprint"/>
  <arg name="robot2_scan_topic"     default="/robot2/scan"/>

  <arg name="robot2_cmd_vel_topic"        default="/robot1/cmd_vel"/>
  <arg name="robot2_odom_topic"     default="/robot1/odom"/>

  <arg name="robot1_odom_frame_id"  default="robot1_tf/odom"/>
  <arg name="robot1_base_frame_id"  default="robot1_tf/base_footprint"/>
  <arg name="robot1_scan_topic"     default="/robot1/scan"/>

  <arg name="robot1_cmd_vel_topic"        default="/robot1/cmd_vel"/>
  <arg name="robot1_odom_topic"     default="/robot1/odom"/>



  <!-- Turtlebot3 -->
  <!-- <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch"> -->
    <!-- <arg name="model" value="$(arg model)"/> -->
  <!-- </include> -->

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <group ns="robot2">
    <include file="$(find multi_navigation)/launch/amcl.launch">
      <arg name="scan_topic" value="$(arg robot2_scan_topic)" />
      <arg name="odom_frame_id" value="$(arg robot2_odom_frame_id)"/>
      <arg name="base_frame_id" value="$(arg robot2_base_frame_id)" />
      <arg name="initial_pose_x" value="-1.0"/>
      <arg name="initial_pose_y" value="1.0"/>

    </include>
  </group>

  <group ns="robot1">
    <include file="$(find multi_navigation)/launch/amcl.launch">
      <arg name="scan_topic" value="$(arg robot1_scan_topic)" />
      <arg name="odom_frame_id" value="$(arg robot1_odom_frame_id)"/>
      <arg name="base_frame_id" value="$(arg robot1_base_frame_id)" />
      <arg name="initial_pose_x" value="1.0"/>
      <arg name="initial_pose_y" value="1.0"/>


    </include>
  </group>

  <!-- move_base -->
  <include file="$(find  multi_navigation)/launch/move_base.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="cmd_vel_topic"        value="$(arg robot1_cmd_vel_topic)"/>
    <arg name="odom_topic"     value="$(arg robot1_odom_topic)"/>
    <arg name="robot_tf_prefix" value="robot1_tf"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find multi_navigation)/rviz/turtlebot3_navigation.rviz"/>
  </group>
</launch>
